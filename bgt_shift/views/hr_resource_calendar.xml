<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_resource_calendar_additional_form" model="ir.ui.view">
            <field name="name">resource.calendar.additional.form</field>
            <field name="model">resource.calendar</field>
            <field name="inherit_id" ref="resource.resource_calendar_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="shift_type"/>
                </field>
            </field>
        </record>

        <record id="view_resource_calendar_additional_tree" model="ir.ui.view">
            <field name="name">new.resource.calendar.tree.view</field>
            <field name="model">resource.calendar</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="resource.view_resource_calendar_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="shift_type"/>
                </field>
            </field>
        </record>

    </data>
</openerp>